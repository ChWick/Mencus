<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	  package="org.mencus.game"
	  android:versionCode="@MENCUS_VERSION_CODE@"
	  android:versionName="@MENCUS_VERSION_NAME@" 
	  android:installLocation="auto">

  <uses-sdk android:minSdkVersion="@ANDROID_NATIVE_API_LEVEL@" />
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />  
  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

  @MENCUS_ANDROID_PERMISSIONS@

  <application android:label="Mencus"
	       android:icon="@drawable/ic_launcher"
	       android:hasCode="true"
	       android:allowBackup="true">
    <meta-data
        android:name="com.google.android.gms.version"
        android:value="@integer/google_play_services_version" />
    <activity android:name=".MencusNativeActivity"
              android:label="Mencus"
	      android:screenOrientation="landscape"
              android:configChanges="orientation@SCREEN_SIZE@|keyboardHidden"
	      android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
      <!-- Tell NativeActivity the name of or .so -->
      <meta-data android:name="android.app.lib_name" android:value="Mencus" />
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>
    <!-- Activity required to show ad overlays. -->
    <activity
        android:name="com.google.android.gms.ads.AdActivity"
        android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>

  </application>

</manifest>
